<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.app.mapper.CommentMapper">

	<resultMap id="joinMap" type="Comment" autoMapping="true">
		<id property="commentId" column="id" />
		<association property="recipe" resultMap="recipeMap" />
	</resultMap>
	<resultMap id="recipeMap" type="Recipe" autoMapping="true">
		<id property="recipeId" column="id" />
	</resultMap>

	<sql id="Comments">
		SELECT comment.id, comment, comment.registered,
		comment.updated,
		user.id AS user_id,
		recipe.id AS recipe_id FROM comment
		JOIN user ON
		comment.user_id =
		user.id
		JOIN recipe ON comment.recipe_id =
		recipe.id
	</sql>

	<select id="selectComments" resultMap="joinMap">
		<include refid="Comments" />
	</select>

	<select id="selectCommentById" resultMap="joinMap"
		parameterType="int">
		<include refid="Comments" />
		WHERE comment.id = #{commentId}
	</select>

	<select id="selectCommentByUser" resultMap="joinMap"
		parameterType="int">
		<include refid="Comments" />
		WHERE user.id = #{userId}
	</select>

	<select id="selectCommentByRecipe" resultMap="joinMap"
		parameterType="int">
		<include refid="Comments" />
		WHERE recipe.id = #{recipeId}
	</select>

	<insert id="insert" parameterType="Comment">
		INSERT INTO comment(recipe_id,
		user_id, comment)
		VALUES (#{recipeId}, #{userId}, #{comment})
	</insert>

	<update id="update" parameterType="Comment">
		UPDATE comment SET comment =
		#{comment} WHERE id = #{commentId}
	</update>

	<delete id="delete" parameterType="int">
		DELETE FROM comment WHERE id =
		#{commentId}
	</delete>




</mapper>